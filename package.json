{
  "name": "typescript-express-postgres",
  "version": "1.0.0",
  "author": "Abdul Saboor Khan",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "start": "nodemon -e ts,js --exec ts-node ./src/index.ts",
    "start:prod": "pm2 start ./dist/server.js --name typescript-express-postgres",
    "stop:prod": "pm2 stop typescript-express-postgres",
    "lint": "eslint */**/*.ts --ignore-pattern ./node_modules/",
    "prettify": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky",
    "test": "jest",
    "typeorm": "ts-node ./node_modules/typeorm/cli -d ./ormconfig.ts",
    "migration:create": "cross-var ts-node ./node_modules/typeorm/cli migration:create ./database/migrations/$npm_config_name",
    "migration:generate": "cross-var npm run typeorm -- migration:generate ./database/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,json}": [
      "eslint",
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "pm2": "^5.4.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "winston": "^3.14.2",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.8",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.16.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
